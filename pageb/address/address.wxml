<view>
 <form bindsubmit='applySubmit'>
	<view class="group">
		<view class="group-header">地址信息</view>
   
		<view class="group-body">
			<view class="input-list">
				<view class="input-item">
					<text class="input-item-label">收件人</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入收件人" name="recipients" value='{{recipients}}'></input>
					</view>
				</view>
        <view class="input-item">
					<text class="input-item-label">电话</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入电话" name="phone" ></input>
					</view>
				</view>

          <view class="input-item">
					<text class="input-item-label">省</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入省名" name="province" ></input>
					</view>
				</view>

          <view class="input-item">
					<text class="input-item-label">市</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入市名" name="city" ></input>
					</view>
				</view>
          <view class="input-item">
					<text class="input-item-label">区</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入区名" name="area" ></input>
					</view>
				</view>

        </view>
          <view class="input-item">
					<text class="input-item-label">街道</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入街道名" name="street" ></input>
					</view>
				</view>
        <view class="input-item input-item-full" style="height:130px">
					<text class="input-item-label">详细地址</text>
					<textarea placeholder="可输入50字" maxlength="50" name="detail" style="height:100px"></textarea>
				</view>
        
			</view>
		</view>

		<view class="group-body">
			<view class="input-list">
				<view class="input-item">
					<text class="input-item-label">默认地址</text>
					<view class="input-item-content">
						<radio-group bindchange="setFinance" name="isdefault">
							<label >
								<radio value="0"/>是
							</label>
							<label>
								<radio value="1"/>否
							</label>
    
						</radio-group>
					</view>
				</view>
			</view>
	
	</view>
	<view class="btn-submit">
		<button type="primary" class="btn-block btn-orange" form-type='submit'>提交</button>
	</view>
  </form>
</view>